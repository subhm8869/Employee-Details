<mvc:View
    xmlns:f="sap.f"
    controllerName="com.test.employee.controller.Root"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
    displayBlock="true"
    xmlns:f2="sap.ui.layout.form"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <f:DynamicPage id="page">
        <f:title>
            <f:DynamicPageTitle
                id="idEmployeeDynamicPageTitle"
                backgroundDesign="Transparent"
            >
                <f:content>
                    <Title
                        id="idEmployeeTitle"
                        text="{i18n>EmployeeDetails}"
                        titleStyle="H2"
                    />
                </f:content>
            </f:DynamicPageTitle>
        </f:title>
        <f:content>
            <l:ResponsiveSplitter
                id="idEmployeeResponsiveSplitter"
                defaultPane="default"
            >
                <l:PaneContainer
                    id="idEmployeeTablePannelContainer"
                    resize=".onRootContainerResize"
                >
                    <l:SplitPane
                        id="idEmployeeTableSplitPane"
                        requiredParentWidth="600"
                    >
                        <l:layoutData>
                            <l:SplitterLayoutData
                                id="idEmployeeTableLayoutData"
                                size="70%"
                            />
                        </l:layoutData>
                        <Panel
                            id="idEmployeeTablePanel"
                            height="100%"
                        >
                            <Table
                                id="idEmployeeTable"
                                mode="SingleSelectMaster"
                                inset="true"
                                items="{
                                            path: '/Employee',
                                            sorter: {
                                                path: 'Name'
                                            },
                                            parameters : {expand:'Department'}
                                        }"
                                autoPopinMode="true"
                                selectionChange="onSelectEmployee"
                            >
                                <headerToolbar>
                                    <OverflowToolbar
                                        id="idEmployeeOverflowToolbar"
                                    >
                                        <content>
                                            <Title
                                                id="idEmployeeTableTitle"
                                                text=""
                                                level="H2"
                                            />
                                            <ToolbarSpacer
                                                id="idEmployeeToolbarSpacer"
                                            />
                                        </content>
                                    </OverflowToolbar>
                                </headerToolbar>
                                <columns>
                                    <Column
                                        id="idEmployeeIDColumn"
                                        demandPopin="true"
                                        hAlign="Center"
                                    >
                                        <Text
                                            id="idEmployeeIDColumnText"
                                            text="ID"
                                        />
                                    </Column>
                                    <Column
                                        id="idEmployeeNameColumn"
                                        demandPopin="true"
                                        hAlign="Center"
                                    >
                                        <Text
                                            id="idEmployeeNameColumnText"
                                            text="Name"
                                        />
                                    </Column>
                                    <Column
                                        id="idEmployeeAgeColumn"
                                        demandPopin="true"
                                        hAlign="Center"
                                    >
                                        <Text
                                            id="idEmployeeAgeColumnText"
                                            text="Age"
                                        />
                                    </Column>
                                    <Column
                                        id="idEmployeegenerColumn"
                                        demandPopin="true"
                                        hAlign="Center"
                                    >
                                        <Text
                                            id="idEmployeeGenderColumnText"
                                            text="Gender"
                                        />
                                    </Column>
                                    <Column
                                        id="idEmployePhoneColumn"
                                        demandPopin="true"
                                        hAlign="Center"
                                    >
                                        <Text
                                            id="idEmployeePhoneColumnText"
                                            text="Phone"
                                        />
                                    </Column>
                                    <Column
                                        id="idEmployeeDepartmentColumn"
                                        hAlign="Center"
                                        demandPopin="true"
                                    >
                                        <Text
                                            id="idEmployeeDepartmentColumnText"
                                            text="Department"
                                        />
                                    </Column>
                                </columns>
                                <items>
                                    <ColumnListItem
                                        id="idEmployeeListItem"
                                        vAlign="Middle"
                                    >
                                        <cells>
                                            <Text
                                                id="idEmployeeID"
                                                text="{ID}"
                                            />
                                            <Text
                                                id="idEmployeeName"
                                                text="{Name}"
                                            />
                                            <Text
                                                id="idEmployeeAge"
                                                text="{Age}"
                                            />
                                            <Text
                                                id="idEmployeeGender"
                                                text="{Gender}"
                                            />
                                            <Text
                                                id="idEmployeePhone"
                                                text="{Phone}"
                                            />
                                            <Text
                                                id="idEmployeeDepartmentName"
                                                text="{Department/Name}"
                                            />
                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>
                        </Panel>
                    </l:SplitPane>
                    <l:SplitPane
                        id="idEmployeeFormSplitPane"
                        requiredParentWidth="800"
                    >
                        <l:layoutData>
                            <l:SplitterLayoutData id="idEmployeeFormSplitter" />
                        </l:layoutData>
                        <VBox
                            id="idEmployeePageVBox"
                            class="sapUiSmallMargin"
                        >
                            <f2:SimpleForm
                                id="idEmployeeForm"
                                editable="true"
                                layout="ResponsiveGridLayout"
                                title="{i18n>EmployeeDetails}"
                                labelSpanXL="3"
                                labelSpanL="3"
                                labelSpanM="3"
                                labelSpanS="12"
                                adjustLabelSpan="false"
                                emptySpanXL="4"
                                emptySpanL="4"
                                emptySpanM="4"
                                emptySpanS="0"
                                columnsXL="1"
                                columnsL="1"
                                columnsM="1"
                                singleContainerFullSize="false"
                            >
                                <f2:content>
                                    <!-- User Name  -->
                                    <Label
                                        id="idEmployeeStaffUserNameLabel"
                                        text="{i18n>Name}"
                                    />
                                    <Input
                                        id="idEmployeeStaffUserNameInput"
                                        value="{Name}"
                                    />
                                    <!-- Department  -->
                                    <Label
                                        id="idEmployeeDepartmentLabel"
                                        text="{i18n>Department}"
                                    />
                                    <ComboBox
                                        id="idEmployeeDepartmentInput"
                                        class="sapUiSmallMarginBottom"
                                        items="{/Department}"
                                        selectedKey="{ID}"
                                    >
                                        <core:ListItem
                                            id="idEmployeeDepartmentInputComboBox"
                                            key="{ID}"
                                            text="{Name}"
                                        />
                                    </ComboBox>

                                    <!-- Phone Number  -->
                                    <Label
                                        id="idEmployeePhoneNumberLabel"
                                        text="{i18n>Phone}"
                                    />
                                    <Input
                                        id="idEmployeePhoneNumberInput"
                                        value="{Phone}"
                                    />

                                    <!-- Gender  -->
                                    <Label
                                        id="idEmployeeGenderLabel"
                                        text="{i18n>Gender}"
                                    />
                                    <Input
                                        id="idEmployeeGenderInput"
                                        value="{Gender}"
                                    />

                                    <!-- Age  -->
                                    <Label
                                        id="idEmployeeAgeLabel"
                                        text="{i18n>Age}"
                                    />
                                    <Input
                                        id="idEmployeeAgeInput"
                                        value="{Age}"
                                    />

                                    <Label id="idBlankLabelForEmployee" />
                                    <FlexBox
                                        id="idEmployeeFlexBox"
                                        justifyContent="Center"
                                    >
                                        <Button
                                            id="idEmployeeAddBtn"
                                            text="{i18n>Add}"
                                            press="onAddEmployeeApplication"
                                            type="Emphasized"
                                            class="sapUiSmallMarginEnd"
                                        />
                                        <Button
                                            id="idEmployeeDeleteBtn"
                                            text="{i18n>Delete}"
                                            press="onDeleteEmployeeApplication"
                                            type="Reject"
                                            enabled="false"
                                            class="sapUiSmallMarginEnd"
                                        />
                                    </FlexBox>
                                </f2:content>
                            </f2:SimpleForm>
                        </VBox>
                    </l:SplitPane>
                </l:PaneContainer>
            </l:ResponsiveSplitter>
        </f:content>
    </f:DynamicPage>
</mvc:View>
